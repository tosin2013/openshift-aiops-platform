# Example Secret Values File
# Copy this to values-secret.yaml and add real credentials
# values-secret.yaml is git-ignored for security

# Git credentials for Gitea
git:
  credentials:
    username: "your-gitea-username"
    password: "your-gitea-password"

# Object Store (S3/NooBaa) Credentials
objectStore:
  # Get credentials from NooBaa:
  # oc get secret noobaa-admin -n openshift-storage -o jsonpath='{.data.AWS_ACCESS_KEY_ID}' | base64 -d
  # oc get secret noobaa-admin -n openshift-storage -o jsonpath='{.data.AWS_SECRET_ACCESS_KEY}' | base64 -d
  accessKey: "your-s3-access-key"
  secretKey: "your-s3-secret-key"

# Vault configuration (if using HashiCorp Vault)
secrets:
  vault:
    address: "https://vault.example.com:8200"
    token: "your-vault-token"
    role: "self-healing-platform"

# SETUP INSTRUCTIONS:
# 1. Copy this file:
#    cp values-secret.yaml.example values-secret.yaml
#
# 2. Get NooBaa credentials:
#    export ACCESS_KEY=$(oc get secret noobaa-admin -n openshift-storage -o jsonpath='{.data.AWS_ACCESS_KEY_ID}' | base64 -d)
#    export SECRET_KEY=$(oc get secret noobaa-admin -n openshift-storage -o jsonpath='{.data.AWS_SECRET_ACCESS_KEY}' | base64 -d)
#
# 3. Update values-secret.yaml with real credentials
#
# 4. Deploy pattern:
#    make -f common/Makefile operator-deploy
#
# ⚠️ NEVER commit values-secret.yaml to git!
