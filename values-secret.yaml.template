# Git Credentials
# Used for accessing private Git repositories (Gitea or GitHub)
git:
  credentials:
    # Git username or organization
    username: "{{ GIT_USERNAME }}"

    # Git password or Personal Access Token (PAT)
    # For GitHub: Create PAT at https://github.com/settings/tokens
    # For Gitea: Create token at https://<gitea-url>/user/settings/applications
    password: "{{ GIT_PASSWORD_OR_TOKEN }}"

# Object Storage Credentials (S3/NooBaa)
# Used for model storage and data persistence
objectStore:
  # S3 Access Key ID
  # For ODF NooBaa: Get from NooBaa console or obc secret
  # For AWS S3: Get from IAM console
  accessKey: "{{ S3_ACCESS_KEY }}"

  # S3 Secret Access Key
  # For ODF NooBaa: Get from NooBaa console or obc secret
  # For AWS S3: Get from IAM console
  secretKey: "{{ S3_SECRET_KEY }}"

# Vault Credentials (if using HashiCorp Vault)
vault:
  # Vault server address
  address: "{{ VAULT_ADDRESS }}"

  # Vault token for authentication
  token: "{{ VAULT_TOKEN }}"

  # Vault role ID (for AppRole auth)
  roleId: "{{ VAULT_ROLE_ID }}"

  # Vault secret ID (for AppRole auth)
  secretId: "{{ VAULT_SECRET_ID }}"

# Grafana Credentials
grafana:
  # Grafana admin password
  adminPassword: "{{ GRAFANA_ADMIN_PASSWORD }}"

# OpenAI API Key (if using OpenAI for MCP server)
openai:
  apiKey: "{{ OPENAI_API_KEY }}"

# Google Gemini API Key (if using Gemini for MCP server)
gemini:
  apiKey: "{{ GEMINI_API_KEY }}"

